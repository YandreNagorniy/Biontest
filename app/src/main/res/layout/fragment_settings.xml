<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <FrameLayout
                android:id="@+id/frameLay_settings"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:background="@color/colorToolbar">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/settings"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/margin_smal"
                    android:src="@drawable/ic_arrow_back_black_24dp" />
            </FrameLayout>


            <LinearLayout
                android:id="@+id/linLay_SoilFactors"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_rounder_sqare"
                android:backgroundTint="@color/background_color_tile"
                android:elevation="2dp"
                android:orientation="vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tvSoil_factors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:padding="16dp"
                    android:text="Почвенные факторы"
                    android:textAppearance="@style/TextAppearance.Header" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvSoil_factors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="android.support.v7.widget.GridLayoutManager"
                    app:spanCount="3"
                    tools:listitem="@layout/card_settings" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_rounder_sqare"
                android:backgroundTint="@color/background_color_tile"
                android:elevation="2dp"

                android:orientation="vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tvGidroTerm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:padding="16dp"
                    android:text="Гидротермические факторы"
                    android:textAppearance="@style/TextAppearance.Header" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/clGidroTerm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/bg_rounder_sqare"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvOsadki"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Осадки за сезон"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@id/etOsadki"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/etOsadki" />

                    <EditText
                        android:id="@+id/etOsadki"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintStart_toEndOf="@id/tvOsadki"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvZPV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="ЗПВ"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@id/etZPV_mm"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/etZPV_mm" />

                    <EditText
                        android:id="@+id/etZPV_mm"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toEndOf="@id/tvZPV"
                        app:layout_constraintTop_toBottomOf="@id/etOsadki" />

                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_rounder_sqare"
                android:backgroundTint="@color/background_color_tile"
                android:elevation="2dp"
                android:orientation="vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tvAnalitic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:padding="16dp"
                    android:text="Аналитические методики"
                    android:textAppearance="@style/TextAppearance.Header" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/bg_rounder_sqare"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvN"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="N"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@id/RadioGroup_N"
                        app:layout_constraintEnd_toStartOf="@id/gl1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/RadioGroup_N" />

                    <android.support.constraint.Guideline
                        android:id="@+id/gl1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.2" />

                    <RadioGroup
                        android:id="@+id/RadioGroup_N"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/gl1"
                        app:layout_constraintTop_toTopOf="parent">

                        <RadioButton
                            android:id="@+id/lightGidr_N"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Легкогидролизуемый" />

                        <RadioButton
                            android:id="@+id/Sheloch_N"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Щелочногидролизуемый" />

                        <RadioButton
                            android:id="@+id/mineral_N"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Минеральный" />

                    </RadioGroup>

                    <View
                        android:id="@+id/v1"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/colorLightGray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/RadioGroup_N" />

                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>