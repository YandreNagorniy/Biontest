<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_value"
    android:layout_width="match_parent"
    android:layout_margin="1dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/element_nameTv"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Натрий"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/elementTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:text="Na"
        android:textColor="@color/textColorApp"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="@id/element_nameTv"
        app:layout_constraintTop_toBottomOf="@id/element_nameTv" />

    <!--<android.support.constraint.Guideline-->
    <!--android:id="@+id/gLine1"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:orientation="vertical"-->
    <!--app:layout_constraintGuide_percent="0.75" />-->

    <EditText
        android:id="@+id/element_valueEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="3"
        android:text="1"
        android:textSize="24sp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@id/elementTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/elementTv" />


</android.support.constraint.ConstraintLayout>